{% extends  'layout.html.twig' %}
{% block content %}
    <div class="breadcrumb-style-2">
        <div class="breadcrumb-inner">
            <h1 class="page-title color-black">Update Rent Product </h1>
        </div>
    </div>
    {{form_start(form)}}
    <div class="form-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 d-flex justify-content-center form-title">
                    <h3>Fill out data</h3>
                </div>
                <div class="col-lg-8 offset-lg-2 d-flex justify-content-center">
                    <div class="form-group">
                        <div class="form-field margin-top-30">
                            {{ form_widget(form.marke,{ 'attr': {'class': "input-form",
                                'placeholder': 'Marque'} }) }}
                        </div>

                        <div class="form-field margin-top-30">
                            {{ form_widget(form.model,{'attr':{'class':"input-form",
                                'placeholder':'Model'}}) }}
                        </div>

                        <div class="form-field margin-top-30">
                            {{ form_widget(form.reference,{'attr':{'class':'input-form',
                                'placeholder':'Reference'}})}}
                        </div>
                        <div class="form-field margin-top-30">
                            {{ form_widget(form.localisation,{'attr':{'class':'input-form',
                                'placeholder':'location'}})}}
                        </div>
                        <div class="form-field margin-top-30">
                            {{ form_widget(form.Rentdays,{'attr':{'class':'input-form',
                                'placeholder':'Rent days '}})}}
                        </div>
                        <div class="form-field margin-top-30">
                            {{ form_widget(form.quantity,{'attr':{'class':'input-form',
                                'placeholder':'quantity'}})}}
                        </div>

                        <div class="form-field margin-top-30">
                            {{ form_widget(form.price,{'attr':{'class':'input-form',
                                'placeholder':'price'}})}}
                        </div>

                        <div class="form-field margin-top-30">
                            {{ form_widget(form.dispo,{'attr':{'class':'input-form',
                                'placeholder':'Avaliblity'}})}}
                        </div>
                        <div class="form-field margin-top-30">
                            {{ form_widget(form.description,{'attr':{'class':'input-form',
                                'placeholder':'Description'}})}}
                        </div>

                        <div class="form-field margin-top-30">
                            {{ form_widget(form.imageFile,{'attr':{'class':'input-form'}})}}
                        </div>

                        <div class="col-lg-8 offset-lg-2 d-flex justify-content-center">

                        </div>
                        <div class="col-lg-8 offset-lg-2 margin-top-50">
                            <div class="controler-wrapper">
                                <div class="btn-wrapper desktop-left padding-bottom-10">
                                    {{ form_widget(form.Publier,{'attr':{'class':'button-explore'}})}}
                                </div>
                                <div class="progressbar">
                                    <span class="home-slider-progress"></span>
                                    <span class="home-slider-progress-active"></span>
                                </div>
                            </div>
                        </div>



                    </div></div></div></div></div>
    {{ form_end(form) }}

{% endblock %}